{
    "source": {
      "include": ["lib", "README.md"],
      "includePattern": ".+\\.js$",
      "excludePattern": "(node_modules/|docs/)"
    },
    "plugins": ["plugins/markdown"],
    "opts": {
      "destination": "./docs/",
      "recurse": true,
      "readme": "README.md",
      "template": "node_modules/clean-jsdoc-theme",
      "tutorials": "./examples"
    },
    "templates": {
      "cleverLinks": false,
      "monospaceLinks": false
    },
    "markdown": {
      "parser": "gfm",
      "hardwrap": true
    }
  }